@model Data.EditGameModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>GameModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GameModel.Id" />
            <div class="form-group">
                <label asp-for="GameModel.Title" class="control-label"></label>
                <input asp-for="GameModel.Title" class="form-control" />
                <span asp-validation-for="GameModel.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameModel.ReleaseDate" class="control-label"></label>
                <input asp-for="GameModel.ReleaseDate" class="form-control" />
                <span asp-validation-for="GameModel.ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameModel.Price" class="control-label"></label>
                <input asp-for="GameModel.Price" value="@(Model.GameModel.Price.ToString())" class="form-control"></input>
                <span asp-validation-for="GameModel.Price" class="text-danger"></span>
            </div>
            <div class="stateSection mb-5">
                @Html.DropDownList(
                         "GameModel.GenreId",
                         new SelectList(
                         Model.Genres.Select(x => new { Value = x.Id, Text = x.GenreName }),
                         "Value",
                         "Text"
                         )
                         )
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
