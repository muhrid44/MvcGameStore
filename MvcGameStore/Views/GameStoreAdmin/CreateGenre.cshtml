@model Data.GenreModel

@{
    ViewData["Title"] = "Create Your Genre";
}

<h1>Create Your Genre of Game</h1>

<h4>Genre</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateGenre">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GenreName" class="control-label"></label>
                <input asp-for="GenreName" class="form-control" />
                <span asp-validation-for="GenreName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Is this genre only for adult? </label>
                <input class="ml-2" type="checkbox" value="true" name="AdultOnly" />
                <span asp-validation-for="AdultOnly" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="CreateGenre" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
